    <script>
        // Calendario
        let fechaActual = new Date();

        function renderCalendario() {
            const mesAnio = document.getElementById('mesAnio');
            const diasCalendario = document.getElementById('diasCalendario');

            const año = fechaActual.getFullYear();
            const mes = fechaActual.getMonth();

            const meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
                          'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'];

            mesAnio.textContent = `${meses[mes]} ${año}`;

            const primerDia = new Date(año, mes, 1).getDay();
            const ultimoDia = new Date(año, mes + 1, 0).getDate();
            const hoy = new Date();

            diasCalendario.innerHTML = '';

            for (let i = 0; i < primerDia; i++) {
                diasCalendario.innerHTML += '<div></div>';
            }

            for (let dia = 1; dia <= ultimoDia; dia++) {
                const esHoy = dia === hoy.getDate() && mes === hoy.getMonth() && año === hoy.getFullYear();
                const claseHoy = esHoy ? 'today' : '';

                diasCalendario.innerHTML += `
                    <div class="calendar-day ${claseHoy} text-center rounded-2 p-1"
                         style="background-color: ${esHoy ? '#3b82f6' : '#f8fafc'};
                                color: ${esHoy ? 'white' : '#334155'};
                                font-size: 0.7rem;
                                aspect-ratio: 1;
                                border: 1px solid #e2e8f0;">
                        ${dia}
                    </div>
                `;
            }
        }

        function cambiarMes(direccion) {
            fechaActual.setMonth(fechaActual.getMonth() + direccion);
            renderCalendario();
        }

        document.addEventListener('DOMContentLoaded', function() {
            //cargarChequeosVencidos();
            renderCalendario();
        });

        
        let currentPosition = 0;
        const cardWidth = 158;

        function scrollCards(direction) {
            const container = document.getElementById('cardsContainer');
            const containerWidth = container.parentElement.offsetWidth;
            const totalCards = container.children.length;
            const visibleCards = Math.floor(containerWidth / cardWidth);
            const maxScroll = Math.max(0, (totalCards - visibleCards) * cardWidth);

            currentPosition -= direction * cardWidth;

            if (currentPosition < 0) currentPosition = 0;
            if (currentPosition > maxScroll) currentPosition = maxScroll;

            container.style.transform = `translateX(-${currentPosition}px)`;
        }
    </script>
</x-app-layout>
